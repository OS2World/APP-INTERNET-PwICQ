 void EXPENTRY icqNewUserMessage(HICQ icq, ULONG uin, USHORT type, const char *p1, const char *p2)
 {
    const MSGMGR *mgr = icqQueryMessageManager(icq, type);

#ifdef DEBUG

    DBGTracex(mgr);

    if(mgr)
    {
       DBGTrace(mgr->sz);
       DBGTracex(mgr->edit);
    }

    if(icq->skin)
    {
       DBGTracex(icq->skin);
       DBGTracex(icq->skin->newMessage);
    }

#endif

    if(mgr && mgr->edit)
    {
       CHKPoint();
       mgr->edit(icq,uin,TRUE,NULL,p1,p2);
    }
